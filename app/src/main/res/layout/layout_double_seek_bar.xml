<merge
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <com.application.seekbar.BarWithLimit
        android:id="@+id/bar_with_limit"
        style="@style/BarWithLimitStyle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="24dp"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:padding="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"/>

    <TextView
        android:id="@+id/text_value"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="10:04:10"/>

    <com.application.seekbar.Thumb
        android:id="@+id/left_thumb"
        android:layout_width="32dp"
        android:layout_height="32dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginStart="64dp"
        android:elevation="5dp"
        android:padding="4dp"
        android:src="@drawable/ic_edit_tag_arrow_left"
        app:layout_constraintBottom_toBottomOf="@+id/bar_with_limit"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/bar_with_limit"/>

    <com.application.seekbar.Thumb
        android:id="@+id/right_thumb"
        android:layout_width="32dp"
        android:layout_height="32dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginEnd="16dp"
        android:elevation="5dp"
        android:padding="4dp"
        android:src="@drawable/ic_edit_tag_arrow_right"
        app:layout_constraintBottom_toBottomOf="@+id/bar_with_limit"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/bar_with_limit"/>


    <TextView
        android:id="@+id/right_label"
        style="@style/IndicatorLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toTopOf="@+id/right_thumb"
        app:layout_constraintEnd_toEndOf="@+id/right_thumb"
        app:layout_constraintStart_toStartOf="@+id/right_thumb"
        tools:text="10 s"
        />

    <TextView
        android:id="@+id/bottom_label"
        style="@style/IndicatorLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        tools:text="15 s"/>

    <TextView
        android:id="@+id/left_label"
        style="@style/IndicatorLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toTopOf="@+id/left_thumb"
        app:layout_constraintEnd_toEndOf="@+id/left_thumb"
        app:layout_constraintStart_toStartOf="@+id/left_thumb"
        tools:text="5 s"
        />

    <ImageView
        android:id="@+id/tag_icon"
        android:layout_width="32dp"
        android:layout_height="32dp"
        android:layout_marginTop="32dp"
        android:scaleType="centerInside"
        android:src="@drawable/ic_tag"
        app:layout_constraintBottom_toTopOf="@+id/bar_with_limit"
        app:layout_constraintEnd_toEndOf="@+id/bar_with_limit"
        app:layout_constraintStart_toStartOf="@+id/bar_with_limit"
        app:layout_constraintTop_toTopOf="parent"/>

    <ImageView
        android:id="@+id/vertical_line"
        android:layout_width="3dp"
        android:layout_height="18dp"
        android:background="@drawable/vertical_line"
        android:elevation="4dp"
        app:layout_constraintBottom_toBottomOf="@+id/bar_with_limit"
        app:layout_constraintEnd_toEndOf="@+id/bar_with_limit"
        app:layout_constraintStart_toStartOf="@+id/bar_with_limit"
        app:layout_constraintTop_toTopOf="@+id/bar_with_limit"/>
    <!--</android.support.constraint.ConstraintLayout>-->
</merge>